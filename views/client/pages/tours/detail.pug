extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .tour-detail 
    .container.my-3
      .row 
        .col-6 
          .inner-images 
            .inner-image 
              img(src="https://backend.daca.vn/assets/tour/images/tour-ha-long.jpg")

        .col-6 
          .inner-title Tour gi do 
          
          .inner-barcode 
            <i class="fa-solid fa-barcode"></i> Ma tour

          .inner-time-start 
            <i class="fa-solid fa-calendar-days"></i> Lich di

          .inner-stock 
            <i class="fa-solid fa-person-walking-luggage"></i> Con 5 cho

          .inner-price-special 400,000d

          .inner-price 500,000d

          .inner-percent Giam toi xx%

          form(
            form-add-to-cart
            tour-id=`:tourId`
          )
            input(
              class="form-control mb-2"
              type="number"
              name="quantity"
              value="1"
              min="1"
              max="10"
            )
            button(
              type="submit"
              class="btn btn-success btn-block"
            ) Thêm vào giỏ hàng
        

      .row 
        .col-12 
          .inner-infomation 
            .inner-label Thong tin tour 
            .inner-text 
              | Noi dung thong tin tour ...
        
        .col-12
          .inner-infomation 
            .inner-label Lich trinh tour 
            .inner-text 
              | Noi dung Lich trinh tour ...

